<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.send.SendActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:strokeColor="@color/transparent"
                    app:cardBackgroundColor="#40CB202D">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/image"
                            app:tint="@color/red"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Images"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    app:strokeColor="@color/transparent"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="#40FF8C00">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/videos"
                            app:tint="@color/orange"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Videos"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:strokeColor="@color/transparent"
                    app:cardBackgroundColor="#40BB86FC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/music"
                            app:tint="@color/purple_200"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Music"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:strokeColor="@color/transparent"
                    app:cardBackgroundColor="#4103A9F4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/docs"
                            app:tint="@color/cBlue"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Docs"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    app:strokeColor="@color/transparent"
                    android:layout_margin="@dimen/_5sdp"
                    app:cardBackgroundColor="#407D42E8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/downloads"
                            app:tint="@color/blue"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Downloads"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_5sdp"
                    app:strokeColor="@color/transparent"
                    app:cardBackgroundColor="#3C5DBB63">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/apks"
                            app:tint="@color/green"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APKs"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_margin="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:fontFamily="@font/bold"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Files"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/filesRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/row_files" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>