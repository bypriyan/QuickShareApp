<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (light theme only) -->
    <style name="Base.Theme.TVMultishare" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/appColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TVMultishare</item>
    </style>
</resources>
